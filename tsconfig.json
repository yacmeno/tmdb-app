{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "noImplicitAny": true,
    "module": "commonjs",
    "allowJs": true,
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "esnext"],
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ]
}